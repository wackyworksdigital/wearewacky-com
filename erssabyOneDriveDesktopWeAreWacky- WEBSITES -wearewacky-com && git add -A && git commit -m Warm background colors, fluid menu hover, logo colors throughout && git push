[32m+[m[32m// Animated Dot Component - color shifting with mouse interaction[m
[32m+[m[32mfunction AnimatedDot({ mouseX, mouseY }: { mouseX: number; mouseY: number }) {[m
[32m+[m[32m  // Calculate hue based on mouse position (0-360)[m
[32m+[m[32m  const hue = (mouseX * 180 + mouseY * 180) % 360;[m
[32m+[m[41m  [m
[32m+[m[32m  return ([m
[32m+[m[32m    <span className="relative inline-block w-[0.25em] h-[0.25em] ml-1">[m
[32m+[m[32m      {/* Main dot - color shifts based on mouse */}[m
[32m+[m[32m      <motion.span[m
[32m+[m[32m        className="absolute inset-0 rounded-full"[m
[32m+[m[32m        animate={{[m
[32m+[m[32m          scale: [1, 1.1, 1],[m
[32m+[m[32m        }}[m
[32m+[m[32m        transition={{[m
[32m+[m[32m          duration: 2,[m
[32m+[m[32m          repeat: Infinity,[m
[32m+[m[32m          ease: "easeInOut",[m
[32m+[m[32m        }}[m
[32m+[m[32m        style={{[m
[32m+[m[32m          background: `linear-gradient(135deg,[m[41m [m
[32m+[m[32m            hsl(${hue}, 80%, 60%) 0%,[m[41m [m
[32m+[m[32m            hsl(${(hue + 60) % 360}, 70%, 55%) 50%,[m[41m [m
[32m+[m[32m            hsl(${(hue + 120) % 360}, 75%, 50%) 100%)`,[m
[32m+[m[32m        }}[m
[32m+[m[32m      />[m
[32m+[m[32m      {/* Subtle glow */}[m
[32m+[m[32m      <motion.span[m
[32m+[m[32m        className="absolute inset-[-30%] rounded-full pointer-events-none"[m
[32m+[m[32m        style={{[m
[32m+[m[32m          background: `radial-gradient(circle, hsla(${hue}, 80%, 60%, 0.3) 0%, transparent 70%)`,[m
[32m+[m[32m        }}[m
[32m+[m[32m        animate={{[m
[32m+[m[32m          scale: [1, 1.3, 1],[m
[32m+[m[32m          opacity: [0.4, 0.6, 0.4],[m
[32m+[m[32m        }}[m
[32m+[m[32m        transition={{[m
[32m+[m[32m          duration: 3,[m
[32m+[m[32m          repeat: Infinity,[m
[32m+[m[32m          ease: "easeInOut",[m
[32m+[m[32m        }}[m
[32m+[m[32m      />[m
[32m+[m[32m    </span>[m
[32m+[m[32m  );[m
[32m+[m[32m}[m
