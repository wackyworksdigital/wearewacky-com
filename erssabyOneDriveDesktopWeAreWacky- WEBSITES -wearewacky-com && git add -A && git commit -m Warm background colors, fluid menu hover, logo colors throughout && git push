[32m+[m[32m// Floating Gradient Blobs[m
[32m+[m[32mfunction GradientBlobs({ progress }: { progress: number }) {[m
[32m+[m[32m  return ([m
[32m+[m[32m    <div className="absolute inset-0 overflow-hidden pointer-events-none">[m
[32m+[m[32m      {/* Blob 1 - Cyan */}[m
[32m+[m[32m      <motion.div[m
[32m+[m[32m        className="absolute w-[40vw] h-[40vw] rounded-full blur-[100px] opacity-20"[m
[32m+[m[32m        style={{[m
[32m+[m[32m          background: "radial-gradient(circle, rgba(34,211,238,0.6) 0%, transparent 70%)",[m
[32m+[m[32m          left: `${10 + progress * 30}%`,[m
[32m+[m[32m          top: `${20 + Math.sin(progress * Math.PI) * 20}%`,[m
[32m+[m[32m        }}[m
[32m+[m[32m        animate={{[m
[32m+[m[32m          scale: [1, 1.2, 1],[m
[32m+[m[32m          x: [0, 50, 0],[m
[32m+[m[32m        }}[m
[32m+[m[32m        transition={{[m
[32m+[m[32m          duration: 8,[m
[32m+[m[32m          repeat: Infinity,[m
[32m+[m[32m          ease: "easeInOut",[m
[32m+[m[32m        }}[m
[32m+[m[32m      />[m
[32m+[m[32m      {/* Blob 2 - Purple */}[m
[32m+[m[32m      <motion.div[m
[32m+[m[32m        className="absolute w-[35vw] h-[35vw] rounded-full blur-[80px] opacity-15"[m
[32m+[m[32m        style={{[m
[32m+[m[32m          background: "radial-gradient(circle, rgba(139,92,246,0.6) 0%, transparent 70%)",[m
[32m+[m[32m          right: `${15 + progress * 20}%`,[m
[32m+[m[32m          bottom: `${25 + Math.cos(progress * Math.PI) * 15}%`,[m
[32m+[m[32m        }}[m
[32m+[m[32m        animate={{[m
[32m+[m[32m          scale: [1.1, 0.9, 1.1],[m
[32m+[m[32m          y: [0, -30, 0],[m
[32m+[m[32m        }}[m
[32m+[m[32m        transition={{[m
[32m+[m[32m          duration: 10,[m
[32m+[m[32m          repeat: Infinity,[m
[32m+[m[32m          ease: "easeInOut",[m
[32m+[m[32m        }}[m
[32m+[m[32m      />[m
[32m+[m[32m      {/* Blob 3 - Pink */}[m
[32m+[m[32m      <motion.div[m
[32m+[m[32m        className="absolute w-[25vw] h-[25vw] rounded-full blur-[60px] opacity-10"[m
[32m+[m[32m        style={{[m
[32m+[m[32m          background: "radial-gradient(circle, rgba(236,72,153,0.5) 0%, transparent 70%)",[m
[32m+[m[32m          left: `${50 + progress * 15}%`,[m
[32m+[m[32m          top: `${60 - progress * 20}%`,[m
[32m+[m[32m        }}[m
[32m+[m[32m        animate={{[m
